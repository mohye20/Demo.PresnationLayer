@model  IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employee" ;
    string ViewDataMessage = ViewData["Message"] as string;
    // Enforce Type Safety -> Required Casting [Strongly Type]

    string ViewBagMessage = ViewBag.Message;
    // can not Enforce Type Safety -> Required Casting [Weakly Type]

}
@* 
        <div class="alert alert-secondary">
            @ViewData["Message"]
        </div> *@

@* <div class="alert alert-secondary">
    @ViewBag.Message</div>
 *@


<a asp-action="Create" class="btn btn-success">Add New Employee</a>
<br />

@if (Model.Count() > 0)
{
    <h1>All Employees</h1>
    <br />
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Salary)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.HireDate)</td>
                <td>@Html.DisplayNameFor(D => D.IsActive)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td>@employee.IsActive</td>
                    <td><a asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-eye"></i></a> </td>
                    <td><a asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@employee.Id"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3 >There is No Employees</h3>
    </div>
}



